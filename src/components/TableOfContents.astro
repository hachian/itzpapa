---
import { t } from '../i18n';

export interface Heading {
  depth: number;
  text: string;
  slug: string;
}

export interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// 翻訳テキストを取得
const tocTitle = t('toc.title');
const tocAriaLabel = t('toc.ariaLabel');
const tocToggle = t('toc.toggle');

// H2とH3のみをフィルタリング（depth 2と3）
const tocHeadings = headings.filter(heading => heading.depth === 2 || heading.depth === 3);

// 見出しが存在しない場合は何も表示しない (EDGE-001)
const shouldShowToc = tocHeadings.length > 0;

// 階層構造の構築
interface TocItem {
  id: string;
  text: string;
  level: number;
  href: string;
}

const tocItems: TocItem[] = tocHeadings.map(heading => ({
  id: heading.slug,
  text: heading.text || '無題のセクション', // EDGE-003: 空の見出しテキストへの対応
  level: heading.depth,
  href: `#${heading.slug}`
}));
---

{shouldShowToc && (
  <nav class="table-of-contents" aria-label={tocAriaLabel} data-toggle-label={tocToggle}>
    <h2 class="toc-title">{tocTitle}</h2>
    <div class="toc-scroll-container">
      <ul class="toc-list">
        {tocItems.map((item) => (
          <li class={`toc-item toc-level-${item.level}`}>
            <a
              href={item.href}
              class="toc-link"
              data-id={item.id}
              aria-label={`${item.text}へ移動`}
            >
              {item.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
)}

<style>
  .table-of-contents {
    padding: var(--space-4);
    background-color: var(--color-gray-50);
    border-radius: var(--radius-xl);
    font-size: var(--font-size-sm);
  }

  .toc-title {
    margin: 0 0 var(--space-4) 0;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
  }

  /* スクロールコンテナ */
  .toc-scroll-container {
    max-height: calc(100vh - var(--space-16) - 100px);
    overflow-y: auto;
    padding-right: var(--space-2);
    scrollbar-width: thin;
    scrollbar-color: var(--color-primary-500-alpha30) transparent;
  }

  /* Webkitブラウザ用のスクロールバー */
  .toc-scroll-container::-webkit-scrollbar {
    width: 6px;
  }

  .toc-scroll-container::-webkit-scrollbar-track {
    background: transparent;
  }

  .toc-scroll-container::-webkit-scrollbar-thumb {
    background-color: var(--color-primary-500-alpha30);
    border-radius: var(--radius-sm);
  }

  .toc-scroll-container::-webkit-scrollbar-thumb:hover {
    background-color: var(--color-primary-500-alpha50);
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .toc-item {
    margin: var(--space-2) 0;
    line-height: var(--line-height-relaxed);
  }

  /* H2レベルの目次項目 */
  .toc-level-2 {
    padding-left: 0;
  }

  /* H3レベルの目次項目（インデント） */
  .toc-level-3 {
    padding-left: var(--space-6);
  }

  .toc-link {
    color: var(--color-text-primary);
    text-decoration: none;
    display: block;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-md);
    transition: color var(--duration-fast) var(--easing-default),
                background-color var(--duration-fast) var(--easing-default);
  }

  .toc-link:hover {
    color: var(--color-primary-500);
    background-color: var(--color-primary-50);
  }

  /* アクティブ状態（スクロール連動ハイライト） */
  .toc-link.active {
    color: var(--color-primary-600);
    font-weight: var(--font-weight-semibold);
    background-color: var(--color-primary-50);
  }

  .toc-link:focus-visible {
    outline: var(--focus-ring-width) solid var(--focus-ring-color);
    outline-offset: var(--focus-ring-offset);
  }

  /* プリント時のスタイル */
  @media print {
    .table-of-contents {
      display: none;
    }
  }

  /* ダークモード */
  html.dark .table-of-contents {
    background-color: var(--color-gray-800);
  }

  html.dark .toc-title {
    color: var(--color-text-primary);
  }

  html.dark .toc-link {
    color: var(--color-text-primary);
  }

  html.dark .toc-link:hover {
    color: var(--color-primary-400);
    background-color: var(--color-primary-hover-dark);
  }

  html.dark .toc-link.active {
    color: var(--color-primary-400);
    background-color: var(--color-primary-hover-dark);
  }

  html.dark .toc-scroll-container {
    scrollbar-color: var(--color-primary-dark-alpha30) transparent;
  }

  html.dark .toc-scroll-container::-webkit-scrollbar-thumb {
    background-color: var(--color-primary-dark-alpha30);
  }

  html.dark .toc-scroll-container::-webkit-scrollbar-thumb:hover {
    background-color: var(--color-primary-dark-alpha50);
  }
</style>

<script>
  // シンプルなスクロール連動ハイライト機能
  // astro:page-load はDOMContentLoadedと異なり、View Transitions後にも発火する
  document.addEventListener('astro:page-load', () => {
    const headings = document.querySelectorAll('h2[id], h3[id]');

    if (headings.length === 0) return;

    // 現在アクティブな見出しを追跡
    let activeHeading: string | null = null;

    // Intersection Observer の設定
    const observerOptions = {
      root: null,
      rootMargin: '-20% 0px -60% 0px', // ビューポート上部20%、下部60%の範囲で判定
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      // 全ての見出しの現在位置を取得
      const allHeadingPositions: { id: string; y: number; isVisible: boolean }[] = [];

      Array.from(headings).forEach(heading => {
        const rect = heading.getBoundingClientRect();
        allHeadingPositions.push({
          id: heading.id,
          y: rect.top,
          isVisible: rect.top <= window.innerHeight * 0.6 // 画面上部60%以内
        });
      });

      // 通過済み（画面上部にある）見出しの中で最も下にあるものを選択
      const passedHeadings = allHeadingPositions.filter(h => h.y <= window.innerHeight * 0.2);

      let newActiveId: string | null = null;

      if (passedHeadings.length > 0) {
        // 通過済み見出しの中で最も下にあるもの
        const bottomMostPassed = passedHeadings.reduce((prev, current) =>
          prev.y > current.y ? prev : current
        );
        newActiveId = bottomMostPassed.id;
      } else {
        // 通過済みがない場合は、最初の見出しをアクティブ
        if (allHeadingPositions.length > 0) {
          newActiveId = allHeadingPositions[0].id;
        }
      }

      // アクティブ状態を更新
      if (activeHeading !== newActiveId) {
        // 古いアクティブ状態を削除
        if (activeHeading) {
          const oldLink = document.querySelector(`.toc-link[data-id="${activeHeading}"]`);
          oldLink?.classList.remove('active');
        }

        // 新しいアクティブ状態を設定
        if (newActiveId) {
          const newLink = document.querySelector(`.toc-link[data-id="${newActiveId}"]`);
          newLink?.classList.add('active');
        }

        activeHeading = newActiveId;
      }
    }, observerOptions);

    // 各見出しを監視対象に追加
    headings.forEach(heading => {
      observer.observe(heading);
    });

    // 初期状態の設定（最初の見出しをアクティブに）
    if (headings.length > 0) {
      const firstHeading = headings[0] as HTMLElement;
      const firstLink = document.querySelector(`.toc-link[data-id="${firstHeading.id}"]`);
      firstLink?.classList.add('active');
      activeHeading = firstHeading.id;
    }

    // クリーンアップ（Astroページ遷移時）
    document.addEventListener('astro:before-swap', () => {
      observer.disconnect();
    });
  });

  // モバイル用折りたたみ機能
  document.addEventListener('astro:page-load', () => {
    const tocSidebar = document.querySelector('.toc-sidebar');
    if (!tocSidebar) return;

    // 折りたたみトグル機能
    const toggleToc = () => {
      tocSidebar.classList.toggle('expanded');
    };

    // ::before疑似要素をクリック可能にするため、要素全体にクリックハンドラを追加
    const handleClick = (event) => {
      const rect = tocSidebar.getBoundingClientRect();
      const isClickOnButton = event.clientY <= rect.top + 56; // ボタンエリア（高さ56px）

      if (isClickOnButton) {
        event.preventDefault();
        event.stopPropagation();
        toggleToc();
      }
    };

    // タッチデバイス対応
    const handleTouch = (event) => {
      const rect = tocSidebar.getBoundingClientRect();
      const touch = event.touches[0] || event.changedTouches[0];
      const isClickOnButton = touch.clientY <= rect.top + 56;

      if (isClickOnButton) {
        event.preventDefault();
        event.stopPropagation();
        toggleToc();
      }
    };

    // メディアクエリで767px以下の場合のみイベントリスナを追加
    const mediaQuery = window.matchMedia('(max-width: 767px)');

    const updateEventListeners = () => {
      if (mediaQuery.matches) {
        // モバイル表示時のみイベントリスナを追加
        tocSidebar.addEventListener('click', handleClick);
        tocSidebar.addEventListener('touchend', handleTouch);
        tocSidebar.style.cursor = 'pointer';
      } else {
        // デスクトップ表示時はイベントリスナを削除
        tocSidebar.removeEventListener('click', handleClick);
        tocSidebar.removeEventListener('touchend', handleTouch);
        tocSidebar.style.cursor = 'auto';
        // 展開状態をリセット
        tocSidebar.classList.remove('expanded');
      }
    };

    // 初期設定
    updateEventListeners();

    // 画面サイズ変更時の処理
    mediaQuery.addEventListener('change', updateEventListeners);

    // キーボードアクセシビリティ
    tocSidebar.addEventListener('keydown', (event) => {
      if (mediaQuery.matches && (event.key === 'Enter' || event.key === ' ')) {
        const rect = tocSidebar.getBoundingClientRect();
        const isOnButton = event.target === tocSidebar; // フォーカスがボタンエリア

        if (isOnButton) {
          event.preventDefault();
          toggleToc();
        }
      }
    });

    // アクセシビリティ属性の設定
    if (mediaQuery.matches) {
      tocSidebar.setAttribute('role', 'button');
      // data属性から翻訳テキストを取得、なければフォールバック
      const toggleLabel = tocSidebar.getAttribute('data-toggle-label') || 'Toggle table of contents';
      tocSidebar.setAttribute('aria-label', toggleLabel);
      tocSidebar.setAttribute('tabindex', '0');
    }

    // クリーンアップ（ページ遷移時）
    document.addEventListener('astro:before-swap', () => {
      mediaQuery.removeEventListener('change', updateEventListeners);
      tocSidebar.removeEventListener('click', handleClick);
      tocSidebar.removeEventListener('touchend', handleTouch);
    });
  });
</script>