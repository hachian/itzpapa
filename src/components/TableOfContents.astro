---
export interface Heading {
  depth: number;
  text: string;
  slug: string;
}

export interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// H2とH3のみをフィルタリング（depth 2と3）
const tocHeadings = headings.filter(heading => heading.depth === 2 || heading.depth === 3);

// 見出しが存在しない場合は何も表示しない (EDGE-001)
const shouldShowToc = tocHeadings.length > 0;

// 階層構造の構築
interface TocItem {
  id: string;
  text: string;
  level: number;
  href: string;
}

const tocItems: TocItem[] = tocHeadings.map(heading => ({
  id: heading.slug,
  text: heading.text || '無題のセクション', // EDGE-003: 空の見出しテキストへの対応
  level: heading.depth,
  href: `#${heading.slug}`
}));
---

{shouldShowToc && (
  <nav class="table-of-contents" aria-label="目次">
    <h2 class="toc-title">目次</h2>
    <div class="toc-scroll-container">
      <ul class="toc-list">
        {tocItems.map((item) => (
          <li class={`toc-item toc-level-${item.level}`}>
            <a
              href={item.href}
              class="toc-link"
              data-id={item.id}
              aria-label={`${item.text}へ移動`}
            >
              {item.text}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
)}

<style>
  .table-of-contents {
    padding: 1rem;
    background-color: var(--gray-light, #f6f6f7);
    border-radius: 8px;
    font-size: 0.9rem;
  }

  .toc-title {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    font-weight: bold;
    color: var(--gray-dark, #1a1a1a);
  }

  /* スクロールコンテナ */
  .toc-scroll-container {
    max-height: 800px;
    overflow-y: auto;
    padding-right: 0.5rem;

    /* カスタムスクロールバー */
    scrollbar-width: thin;
    scrollbar-color: rgba(118, 17, 166, 0.3) transparent;
  }

  /* Webkitブラウザ用のスクロールバースタイル */
  .toc-scroll-container::-webkit-scrollbar {
    width: 6px;
  }

  .toc-scroll-container::-webkit-scrollbar-track {
    background: transparent;
  }

  .toc-scroll-container::-webkit-scrollbar-thumb {
    background-color: rgba(118, 17, 166, 0.3);
    border-radius: 3px;
  }

  .toc-scroll-container::-webkit-scrollbar-thumb:hover {
    background-color: rgba(118, 17, 166, 0.5);
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .toc-item {
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  /* H2レベルの目次項目 */
  .toc-level-2 {
    padding-left: 0;
  }

  /* H3レベルの目次項目（インデント） */
  .toc-level-3 {
    padding-left: 1.5rem;
  }

  .toc-link {
    color: var(--gray-dark, #1a1a1a);
    text-decoration: none;
    display: block;
    padding: 0.25rem 0;
    transition: color 0.2s ease;
  }

  .toc-link:hover {
    color: var(--accent, #7611a6);
  }

  /* アクティブ状態（スクロール連動ハイライト） */
  .toc-link.active {
    color: var(--accent, #7611a6);
    font-weight: bold;
  }

  .toc-link:focus {
    outline: 2px solid var(--accent, #7611a6);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* アクセシビリティ: キーボードフォーカス時のビジュアル */
  .toc-link:focus-visible {
    outline: 2px solid var(--accent, #7611a6);
    outline-offset: 2px;
  }

  /* プリント時のスタイル */
  @media print {
    .table-of-contents {
      display: none;
    }
  }
</style>

<script>
  // シンプルなスクロール連動ハイライト機能
  document.addEventListener('DOMContentLoaded', () => {
    const headings = document.querySelectorAll('h2[id], h3[id]');

    if (headings.length === 0) return;

    // 現在アクティブな見出しを追跡
    let activeHeading: string | null = null;

    // Intersection Observer の設定
    const observerOptions = {
      root: null,
      rootMargin: '-20% 0px -60% 0px', // ビューポート上部20%、下部60%の範囲で判定
      threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
      // 全ての見出しの現在位置を取得
      const allHeadingPositions: { id: string; y: number; isVisible: boolean }[] = [];

      Array.from(headings).forEach(heading => {
        const rect = heading.getBoundingClientRect();
        allHeadingPositions.push({
          id: heading.id,
          y: rect.top,
          isVisible: rect.top <= window.innerHeight * 0.6 // 画面上部60%以内
        });
      });

      // 通過済み（画面上部にある）見出しの中で最も下にあるものを選択
      const passedHeadings = allHeadingPositions.filter(h => h.y <= window.innerHeight * 0.2);

      let newActiveId: string | null = null;

      if (passedHeadings.length > 0) {
        // 通過済み見出しの中で最も下にあるもの
        const bottomMostPassed = passedHeadings.reduce((prev, current) =>
          prev.y > current.y ? prev : current
        );
        newActiveId = bottomMostPassed.id;
      } else {
        // 通過済みがない場合は、最初の見出しをアクティブ
        if (allHeadingPositions.length > 0) {
          newActiveId = allHeadingPositions[0].id;
        }
      }

      // アクティブ状態を更新
      if (activeHeading !== newActiveId) {
        // 古いアクティブ状態を削除
        if (activeHeading) {
          const oldLink = document.querySelector(`.toc-link[data-id="${activeHeading}"]`);
          oldLink?.classList.remove('active');
        }

        // 新しいアクティブ状態を設定
        if (newActiveId) {
          const newLink = document.querySelector(`.toc-link[data-id="${newActiveId}"]`);
          newLink?.classList.add('active');
        }

        activeHeading = newActiveId;
      }
    }, observerOptions);

    // 各見出しを監視対象に追加
    headings.forEach(heading => {
      observer.observe(heading);
    });

    // 初期状態の設定（最初の見出しをアクティブに）
    if (headings.length > 0) {
      const firstHeading = headings[0] as HTMLElement;
      const firstLink = document.querySelector(`.toc-link[data-id="${firstHeading.id}"]`);
      firstLink?.classList.add('active');
      activeHeading = firstHeading.id;
    }

    // クリーンアップ（Astroページ遷移時）
    document.addEventListener('astro:before-swap', () => {
      observer.disconnect();
    });
  });
</script>