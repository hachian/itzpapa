---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import { siteConfig, SITE_TITLE } from '../../site.config';
import { ClientRouter } from 'astro:transitions';
import { resolveThemeColor } from '../theme/color-presets';
import { truncateText } from '../utils/seo/truncate';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
	isHomePage?: boolean;
	/** 記事のスラッグ（記事ページでOG画像を動的生成する場合に使用） */
	slug?: string;
	article?: {
		publishedTime: Date;
		modifiedTime?: Date;
		tags?: string[];
	};
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image: propsImage, isHomePage, slug, article } = Astro.props;

// タイトル形式: トップページ以外は「記事タイトル | サイト名」形式
const formattedTitle = isHomePage ? title : `${title} | ${SITE_TITLE}`;

// 説明文を160文字で切り詰め
const truncatedDescription = truncateText(description, 160);

// OG画像フォールバック優先順位:
// 1. Props.image（カスタムOG画像）
// 2. slugがある場合は動的生成OG画像 /og/{slug}.png
// 3. デフォルトOG画像 /og/default.png
const resolveOgImage = (): ImageMetadata | string => {
	if (propsImage) return propsImage;
	if (slug) return `/og/${slug}.png`;
	return '/og/default.png';
};

const ogImage = resolveOgImage();

// ImageMetadata型かstring型かを判定してsrcを取得
const getImageSrc = (img: ImageMetadata | string): string => {
	return typeof img === 'string' ? img : img.src;
};

const imageSrc = getImageSrc(ogImage);

// ImageMetadata型の場合はwidth/heightを取得
// 動的生成OG画像の場合は固定サイズ（1200x630）
const isImageMetadata = typeof ogImage !== 'string';
const imageWidth = isImageMetadata ? (ogImage as ImageMetadata).width : 1200;
const imageHeight = isImageMetadata ? (ogImage as ImageMetadata).height : 630;

// テーマ設定を取得
const { theme, seo } = siteConfig;

// プリセット名または数値から色相値を解決
const primaryHue = resolveThemeColor(theme.primaryHue);

// Google Analytics ID（空でない場合のみ使用）
const googleAnalyticsId = seo.googleAnalyticsId || '';
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads - Local fonts (優先度高) -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Google Fonts - Noto Sans JP (Japanese font) with performance optimizations -->
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<!-- レンダリングブロックを回避するためmedia属性を使用し、ロード後にallに変更 -->
<link
	href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap"
	rel="stylesheet"
	media="print"
	onload="this.media='all'"
/>
<!-- JavaScript無効時のフォールバック -->
<noscript>
	<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet" />
</noscript>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{formattedTitle}</title>
<meta name="title" content={formattedTitle} />
<meta name="description" content={truncatedDescription} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={article ? 'article' : 'website'} />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={formattedTitle} />
<meta property="og:description" content={truncatedDescription} />
<meta property="og:image" content={new URL(imageSrc, Astro.url)} />
{imageWidth && <meta property="og:image:width" content={String(imageWidth)} />}
{imageHeight && <meta property="og:image:height" content={String(imageHeight)} />}

{/* 記事用Open Graphタグ */}
{article && (
  <>
    <meta property="article:published_time" content={article.publishedTime.toISOString()} />
    {article.modifiedTime && (
      <meta property="article:modified_time" content={article.modifiedTime.toISOString()} />
    )}
    {article.tags?.map((tag) => (
      <meta property="article:tag" content={tag} />
    ))}
  </>
)}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={formattedTitle} />
<meta property="twitter:description" content={truncatedDescription} />
<meta property="twitter:image" content={new URL(imageSrc, Astro.url)} />

<!-- View Transitions -->
<ClientRouter />

<!-- Dark Mode Detection Script (inline to prevent FOUC) -->
<script is:inline>
	// テーマを適用する関数
	function applyTheme() {
		const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
		const storedTheme = localStorage.getItem('theme');

		// ユーザーが明示的にテーマを選択している場合はそれを優先
		if (storedTheme === 'dark' || (!storedTheme && prefersDark)) {
			document.documentElement.classList.add('dark');
			document.documentElement.classList.remove('light');
		} else if (storedTheme === 'light') {
			// ユーザーが明示的にライトモードを選択した場合
			document.documentElement.classList.remove('dark');
			document.documentElement.classList.add('light');
		} else {
			// storedThemeがなく、システムがライトモードの場合
			document.documentElement.classList.remove('dark');
			document.documentElement.classList.remove('light');
		}
	}

	// 初回ロード時に実行
	applyTheme();

	// View Transitions: DOM入れ替え前に新しいドキュメントにテーマクラスをコピー
	// これによりページ遷移時のちらつきを防止
	document.addEventListener('astro:before-swap', (e) => {
		const storedTheme = localStorage.getItem('theme');
		const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

		if (storedTheme === 'dark' || (!storedTheme && prefersDark)) {
			e.newDocument.documentElement.classList.add('dark');
			e.newDocument.documentElement.classList.remove('light');
		} else if (storedTheme === 'light') {
			e.newDocument.documentElement.classList.remove('dark');
			e.newDocument.documentElement.classList.add('light');
		}
	});

	// View Transitions後に再適用（念のため）
	document.addEventListener('astro:after-swap', applyTheme);

	// OS設定の変更を監視
	window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
		// ユーザーが明示的にテーマを選択していない場合のみ自動切替
		if (!localStorage.getItem('theme')) {
			if (e.matches) {
				document.documentElement.classList.add('dark');
				document.documentElement.classList.remove('light');
			} else {
				document.documentElement.classList.remove('dark');
				document.documentElement.classList.remove('light');
			}
		}
	});
</script>

<!-- Theme Color Configuration -->
<Fragment set:html={`<style>:root { --primary-hue: ${primaryHue}; }</style>`} />

{googleAnalyticsId && (
	<Fragment>
		<!-- Google Analytics -->
		<script async src={`https://www.googletagmanager.com/gtag/js?id=${googleAnalyticsId}`}></script>
		<script is:inline define:vars={{ googleAnalyticsId }}>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', googleAnalyticsId);
		</script>
	</Fragment>
)}
