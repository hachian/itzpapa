---
import { siteConfig, SITE_TITLE } from '../../site.config';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
import SocialIcon from './SocialIcon.astro';
import type { SocialType } from './SocialIcon.astro';

// 設定からナビゲーション項目を取得
const { navigation, social } = siteConfig;

// 外部リンクかどうかを判定するヘルパー関数
const isExternalLink = (href: string) => href.startsWith('http://') || href.startsWith('https://');

// 有効な SNS リンクのみをフィルタリング
const enabledSocialLinks = Object.entries(social)
  .filter(([_, config]) => config.enabled && config.url)
  .map(([type, config]) => ({ type: type as SocialType, url: config.url }));
---

<header class="header" transition:persist>
	<nav class="header__nav">
		<a href="/" class="header__brand">{SITE_TITLE}</a>

		<div class="header__links">
			{navigation.map((item) => (
				<HeaderLink
					href={item.href}
					target={isExternalLink(item.href) ? '_blank' : undefined}
					rel={isExternalLink(item.href) ? 'noopener noreferrer' : undefined}
				>
					{item.label}
				</HeaderLink>
			))}
		</div>

		<button
			class="header__menu-toggle"
			aria-expanded="false"
			aria-controls="mobile-menu"
			aria-label="メニューを開く"
		>
			<span class="header__menu-icon"></span>
		</button>

		<div id="mobile-menu" class="header__mobile-menu" hidden>
			{navigation.map((item) => (
				<HeaderLink
					href={item.href}
					target={isExternalLink(item.href) ? '_blank' : undefined}
					rel={isExternalLink(item.href) ? 'noopener noreferrer' : undefined}
				>
					{item.label}
				</HeaderLink>
			))}
			<div class="header__mobile-actions">
				<ThemeToggle />
				{enabledSocialLinks.map(({ type, url }) => (
					<a href={url} target="_blank" rel="noopener noreferrer" class="header__mobile-social-link">
						<span class="sr-only">{type}</span>
						<SocialIcon type={type} size={24} />
					</a>
				))}
			</div>
		</div>

		<div class="header__actions">
			<ThemeToggle />
			{enabledSocialLinks.map(({ type, url }) => (
				<a href={url} target="_blank" rel="noopener noreferrer" class="header__social-link">
					<span class="sr-only">{type}</span>
					<SocialIcon type={type} size={24} />
				</a>
			))}
		</div>
	</nav>
</header>

<script>
	// モバイルメニュートグル
	function setupMobileMenu() {
		const toggle = document.querySelector('.header__menu-toggle');
		const menu = document.getElementById('mobile-menu');

		if (!toggle || !menu) return;

		toggle.addEventListener('click', () => {
			const isOpen = toggle.getAttribute('aria-expanded') === 'true';
			toggle.setAttribute('aria-expanded', String(!isOpen));
			toggle.setAttribute('aria-label', isOpen ? 'メニューを開く' : 'メニューを閉じる');
			menu.hidden = isOpen;
		});

		// メニュー外クリックで閉じる
		document.addEventListener('click', (e) => {
			if (!toggle.contains(e.target as Node) && !menu.contains(e.target as Node)) {
				toggle.setAttribute('aria-expanded', 'false');
				toggle.setAttribute('aria-label', 'メニューを開く');
				menu.hidden = true;
			}
		});

		// Escキーで閉じる
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && !menu.hidden) {
				toggle.setAttribute('aria-expanded', 'false');
				toggle.setAttribute('aria-label', 'メニューを開く');
				menu.hidden = true;
				toggle.focus();
			}
		});
	}

	setupMobileMenu();

	// View Transitions対応
	document.addEventListener('astro:after-swap', setupMobileMenu);
</script>

<style>
	.header {
		position: sticky;
		top: 0;
		z-index: var(--z-sticky);
		background: var(--color-surface);
		box-shadow: var(--shadow-sm);
		transition: box-shadow var(--duration-normal) var(--easing-default);
	}

	.header__nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--space-4) var(--space-6);
	}

	.header__brand {
		font-size: var(--font-size-xl);
		font-weight: var(--font-weight-bold);
		color: var(--color-primary-500);
		text-decoration: none;
		transition: color var(--duration-fast) var(--easing-default);
	}

	.header__brand:hover {
		color: var(--color-primary-600);
	}

	.header__links {
		display: flex;
		align-items: center;
		gap: var(--space-1);
	}

	.header__actions {
		display: flex;
		align-items: center;
		gap: var(--space-2);
	}

	.header__social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: var(--touch-target-min);
		height: var(--touch-target-min);
		color: var(--color-text-secondary);
		border-radius: var(--radius-full);
		transition: color var(--duration-fast) var(--easing-default),
					background-color var(--duration-fast) var(--easing-default);
	}

	.header__social-link:hover {
		color: var(--color-primary-500);
		background-color: var(--color-primary-50);
	}

	/* ハンバーガーメニューボタン */
	.header__menu-toggle {
		display: none;
		align-items: center;
		justify-content: center;
		width: var(--touch-target-min);
		height: var(--touch-target-min);
		padding: 0;
		background: transparent;
		border: none;
		border-radius: var(--radius-md);
		cursor: pointer;
		transition: background-color var(--duration-fast) var(--easing-default);
	}

	.header__menu-toggle:hover {
		background-color: var(--color-gray-100);
	}

	.header__menu-toggle:focus-visible {
		outline: var(--focus-ring-width) solid var(--focus-ring-color);
		outline-offset: var(--focus-ring-offset);
	}

	.header__menu-icon {
		position: relative;
		display: block;
		width: 20px;
		height: 2px;
		background-color: var(--color-text-primary);
		transition: background-color var(--duration-fast) var(--easing-default);
	}

	.header__menu-icon::before,
	.header__menu-icon::after {
		content: '';
		position: absolute;
		left: 0;
		width: 100%;
		height: 2px;
		background-color: var(--color-text-primary);
		transition: transform var(--duration-fast) var(--easing-default);
	}

	.header__menu-icon::before {
		top: -6px;
	}

	.header__menu-icon::after {
		bottom: -6px;
	}

	/* メニューオープン時のアイコン変形 */
	.header__menu-toggle[aria-expanded="true"] .header__menu-icon {
		background-color: transparent;
	}

	.header__menu-toggle[aria-expanded="true"] .header__menu-icon::before {
		transform: translateY(6px) rotate(45deg);
	}

	.header__menu-toggle[aria-expanded="true"] .header__menu-icon::after {
		transform: translateY(-6px) rotate(-45deg);
	}

	/* モバイルメニュー */
	.header__mobile-menu {
		display: none;
	}

	.header__mobile-actions {
		display: flex;
		justify-content: center;
		gap: var(--space-4);
		padding-top: var(--space-4);
		border-top: 1px solid var(--color-gray-200);
	}

	.header__mobile-social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: var(--touch-target-min);
		height: var(--touch-target-min);
		color: var(--color-text-secondary);
		border-radius: var(--radius-full);
		transition: color var(--duration-fast) var(--easing-default),
					background-color var(--duration-fast) var(--easing-default);
	}

	.header__mobile-social-link:hover {
		color: var(--color-primary-500);
		background-color: var(--color-primary-50);
	}

	/* レスポンシブ：モバイル (768px未満) */
	@media (max-width: 767px) {
		.header__links {
			display: none;
		}

		.header__actions {
			display: none;
		}

		.header__menu-toggle {
			display: flex;
		}

		.header__mobile-menu:not([hidden]) {
			display: flex;
			flex-direction: column;
			gap: var(--space-2);
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: var(--color-surface);
			box-shadow: var(--shadow-lg);
			padding: var(--space-4) var(--space-6);
			animation: slideDown var(--duration-fast) var(--easing-out);
		}
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			transform: translateY(-8px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* ダークモード */
	html.dark .header {
		background: var(--color-surface);
	}

	html.dark .header__menu-toggle:hover {
		background-color: var(--color-gray-800);
	}

	html.dark .header__social-link:hover {
		background-color: var(--color-primary-hover-dark);
	}

	html.dark .header__mobile-actions {
		border-top-color: var(--color-gray-700);
	}

	html.dark .header__mobile-social-link:hover {
		background-color: var(--color-primary-hover-dark);
	}
</style>
