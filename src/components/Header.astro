---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggle from './ThemeToggle.astro';
---

<header class="header" transition:persist>
	<nav class="header__nav">
		<a href="/" class="header__brand">{SITE_TITLE}</a>

		<div class="header__links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/tags">Tags</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>

		<button
			class="header__menu-toggle"
			aria-expanded="false"
			aria-controls="mobile-menu"
			aria-label="メニューを開く"
		>
			<span class="header__menu-icon"></span>
		</button>

		<div id="mobile-menu" class="header__mobile-menu" hidden>
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/tags">Tags</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<div class="header__mobile-actions">
				<ThemeToggle />
				<a href="https://github.com/hachian/itzpapa" target="_blank" rel="noopener noreferrer" class="header__mobile-social-link">
					<span class="sr-only">GitHub</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
						<path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path>
					</svg>
				</a>
			</div>
		</div>

		<div class="header__actions">
			<ThemeToggle />
			<a href="https://github.com/hachian/itzpapa" target="_blank" rel="noopener noreferrer" class="header__social-link">
				<span class="sr-only">GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24">
					<path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path>
				</svg>
			</a>
		</div>
	</nav>
</header>

<script>
	// モバイルメニュートグル
	function setupMobileMenu() {
		const toggle = document.querySelector('.header__menu-toggle');
		const menu = document.getElementById('mobile-menu');

		if (!toggle || !menu) return;

		toggle.addEventListener('click', () => {
			const isOpen = toggle.getAttribute('aria-expanded') === 'true';
			toggle.setAttribute('aria-expanded', String(!isOpen));
			toggle.setAttribute('aria-label', isOpen ? 'メニューを開く' : 'メニューを閉じる');
			menu.hidden = isOpen;
		});

		// メニュー外クリックで閉じる
		document.addEventListener('click', (e) => {
			if (!toggle.contains(e.target as Node) && !menu.contains(e.target as Node)) {
				toggle.setAttribute('aria-expanded', 'false');
				toggle.setAttribute('aria-label', 'メニューを開く');
				menu.hidden = true;
			}
		});

		// Escキーで閉じる
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && !menu.hidden) {
				toggle.setAttribute('aria-expanded', 'false');
				toggle.setAttribute('aria-label', 'メニューを開く');
				menu.hidden = true;
				toggle.focus();
			}
		});
	}

	setupMobileMenu();

	// View Transitions対応
	document.addEventListener('astro:after-swap', setupMobileMenu);
</script>

<style>
	.header {
		position: sticky;
		top: 0;
		z-index: var(--z-sticky);
		background: var(--color-surface);
		box-shadow: var(--shadow-sm);
		transition: box-shadow var(--duration-normal) var(--easing-default);
	}

	.header__nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: var(--space-4) var(--space-6);
	}

	.header__brand {
		font-size: var(--font-size-xl);
		font-weight: var(--font-weight-bold);
		color: var(--color-primary-500);
		text-decoration: none;
		transition: color var(--duration-fast) var(--easing-default);
	}

	.header__brand:hover {
		color: var(--color-primary-600);
	}

	.header__links {
		display: flex;
		align-items: center;
		gap: var(--space-1);
	}

	.header__actions {
		display: flex;
		align-items: center;
		gap: var(--space-2);
	}

	.header__social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: var(--touch-target-min);
		height: var(--touch-target-min);
		color: var(--color-text-secondary);
		border-radius: var(--radius-full);
		transition: color var(--duration-fast) var(--easing-default),
					background-color var(--duration-fast) var(--easing-default);
	}

	.header__social-link:hover {
		color: var(--color-primary-500);
		background-color: var(--color-primary-50);
	}

	/* ハンバーガーメニューボタン */
	.header__menu-toggle {
		display: none;
		align-items: center;
		justify-content: center;
		width: var(--touch-target-min);
		height: var(--touch-target-min);
		padding: 0;
		background: transparent;
		border: none;
		border-radius: var(--radius-md);
		cursor: pointer;
		transition: background-color var(--duration-fast) var(--easing-default);
	}

	.header__menu-toggle:hover {
		background-color: var(--color-gray-100);
	}

	.header__menu-toggle:focus-visible {
		outline: var(--focus-ring-width) solid var(--focus-ring-color);
		outline-offset: var(--focus-ring-offset);
	}

	.header__menu-icon {
		position: relative;
		display: block;
		width: 20px;
		height: 2px;
		background-color: var(--color-text-primary);
		transition: background-color var(--duration-fast) var(--easing-default);
	}

	.header__menu-icon::before,
	.header__menu-icon::after {
		content: '';
		position: absolute;
		left: 0;
		width: 100%;
		height: 2px;
		background-color: var(--color-text-primary);
		transition: transform var(--duration-fast) var(--easing-default);
	}

	.header__menu-icon::before {
		top: -6px;
	}

	.header__menu-icon::after {
		bottom: -6px;
	}

	/* メニューオープン時のアイコン変形 */
	.header__menu-toggle[aria-expanded="true"] .header__menu-icon {
		background-color: transparent;
	}

	.header__menu-toggle[aria-expanded="true"] .header__menu-icon::before {
		transform: translateY(6px) rotate(45deg);
	}

	.header__menu-toggle[aria-expanded="true"] .header__menu-icon::after {
		transform: translateY(-6px) rotate(-45deg);
	}

	/* モバイルメニュー */
	.header__mobile-menu {
		display: none;
	}

	.header__mobile-actions {
		display: flex;
		justify-content: center;
		gap: var(--space-4);
		padding-top: var(--space-4);
		border-top: 1px solid var(--color-gray-200);
	}

	.header__mobile-social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: var(--touch-target-min);
		height: var(--touch-target-min);
		color: var(--color-text-secondary);
		border-radius: var(--radius-full);
		transition: color var(--duration-fast) var(--easing-default),
					background-color var(--duration-fast) var(--easing-default);
	}

	.header__mobile-social-link:hover {
		color: var(--color-primary-500);
		background-color: var(--color-primary-50);
	}

	/* レスポンシブ：モバイル (768px未満) */
	@media (max-width: 767px) {
		.header__links {
			display: none;
		}

		.header__actions {
			display: none;
		}

		.header__menu-toggle {
			display: flex;
		}

		.header__mobile-menu:not([hidden]) {
			display: flex;
			flex-direction: column;
			gap: var(--space-2);
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: var(--color-surface);
			box-shadow: var(--shadow-lg);
			padding: var(--space-4) var(--space-6);
			animation: slideDown var(--duration-fast) var(--easing-out);
		}
	}

	@keyframes slideDown {
		from {
			opacity: 0;
			transform: translateY(-8px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* ダークモード */
	html.dark .header {
		background: var(--color-surface);
	}

	html.dark .header__menu-toggle:hover {
		background-color: var(--color-gray-800);
	}

	html.dark .header__social-link:hover {
		background-color: oklch(30% 0.08 293);
	}

	html.dark .header__mobile-actions {
		border-top-color: var(--color-gray-700);
	}

	html.dark .header__mobile-social-link:hover {
		background-color: oklch(30% 0.08 293);
	}
</style>
