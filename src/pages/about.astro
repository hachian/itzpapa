---
import heroLight from '../assets/itzpapa-light_16_9.png';
import heroDark from '../assets/itzpapa-dark_16_9.png';
import Layout from '../layouts/BlogPost.astro';
import { t } from '../i18n';
---

<Layout
	title={t('about.title')}
	description={t('about.description')}
	pubDate={new Date('2025-01-15')}
	heroImageLight={heroLight}
	heroImageDark={heroDark}
	showComments={false}
>
	<section class="about-intro">
		<h2>{t('about.intro.title')}</h2>
		<p class="lead">{t('about.intro.lead')}</p>
	</section>

	<section class="about-name">
		<h2>{t('about.name.title')}</h2>
		<div class="name-card">
			<div class="name-card__title">Itzpapalotl</div>
			<div class="name-card__pronunciation">{t('about.name.pronunciation')}</div>
			<p class="name-card__description">{t('about.name.description')}</p>
			<p class="name-card__metaphor">{t('about.name.metaphor')}</p>
		</div>
	</section>

	<section class="about-features">
		<h2>{t('about.features.title')}</h2>
		<div class="feature-grid">
			<div class="feature-card">
				<div class="feature-card__icon">ğŸ”—</div>
				<h3 class="feature-card__title">{t('about.features.obsidian.title')}</h3>
				<p class="feature-card__text">{t('about.features.obsidian.text')}</p>
			</div>
			<div class="feature-card">
				<div class="feature-card__icon">âš¡</div>
				<h3 class="feature-card__title">{t('about.features.fast.title')}</h3>
				<p class="feature-card__text">{t('about.features.fast.text')}</p>
			</div>
			<div class="feature-card">
				<div class="feature-card__icon">ğŸ“±</div>
				<h3 class="feature-card__title">{t('about.features.responsive.title')}</h3>
				<p class="feature-card__text">{t('about.features.responsive.text')}</p>
			</div>
		</div>
	</section>

	<section class="about-stack">
		<h2>{t('about.stack.title')}</h2>
		<ul class="stack-list">
			<li><span class="stack-name">Astro v5</span><span class="stack-desc">{t('about.stack.astro')}</span></li>
			<li><span class="stack-name">TypeScript</span><span class="stack-desc">{t('about.stack.typescript')}</span></li>
			<li><span class="stack-name">Remark Plugins</span><span class="stack-desc">{t('about.stack.remark')}</span></li>
			<li><span class="stack-name">CSS Variables</span><span class="stack-desc">{t('about.stack.css')}</span></li>
		</ul>
	</section>

	<section class="about-start">
		<h2>{t('about.start.title')}</h2>
		<ol class="start-steps">
			<li>
				<span class="step-number">1</span>
				<span class="step-text">{t('about.start.step1')}</span>
			</li>
			<li>
				<span class="step-number">2</span>
				<span class="step-text">{t('about.start.step2')}</span>
			</li>
			<li>
				<span class="step-number">3</span>
				<span class="step-text">{t('about.start.step3')}</span>
			</li>
			<li>
				<span class="step-number">4</span>
				<span class="step-text">{t('about.start.step4')}</span>
			</li>
		</ol>
	</section>

	<footer class="about-footer">
		<a href="https://github.com/hachian/itzpapa" class="footer-link">GitHub</a>
		<span class="footer-divider">|</span>
		<a href="https://github.com/hachian/itzpapa/blob/main/LICENSE" class="footer-link">MIT License</a>
	</footer>

	<style>
		/* ã‚»ã‚¯ã‚·ãƒ§ãƒ³å…±é€š */
		section {
			margin-bottom: var(--space-12);
		}

		section h2 {
			margin-bottom: var(--space-6);
			padding-bottom: var(--space-2);
			border-bottom: 2px solid var(--color-primary-200);
		}

		/* ã‚¤ãƒ³ãƒˆãƒ­ */
		.lead {
			font-size: var(--font-size-xl);
			line-height: var(--line-height-relaxed);
			color: var(--color-text-secondary);
		}

		/* åå‰ã®ç”±æ¥ã‚«ãƒ¼ãƒ‰ */
		.name-card {
			background: linear-gradient(135deg, var(--color-primary-50), var(--color-gray-50));
			border: 1px solid var(--color-primary-100);
			border-radius: var(--radius-xl);
			padding: var(--space-6);
		}

		.name-card__title {
			font-size: var(--font-size-2xl);
			font-weight: var(--font-weight-bold);
			color: var(--color-primary-600);
			letter-spacing: 0.05em;
		}

		.name-card__pronunciation {
			font-size: var(--font-size-sm);
			color: var(--color-text-secondary);
			margin-bottom: var(--space-4);
		}

		.name-card__description {
			margin-bottom: var(--space-2);
		}

		.name-card__metaphor {
			font-style: italic;
			color: var(--color-text-secondary);
		}

		/* ç‰¹å¾´ã‚°ãƒªãƒƒãƒ‰ */
		.feature-grid {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
			gap: var(--space-4);
		}

		.feature-card {
			background: var(--color-surface);
			border: 1px solid var(--color-gray-200);
			border-radius: var(--radius-lg);
			padding: var(--space-5);
			transition: box-shadow var(--duration-fast) var(--easing-default),
						transform var(--duration-fast) var(--easing-default);
		}

		.feature-card:hover {
			box-shadow: var(--shadow-md);
			transform: translateY(-2px);
		}

		.feature-card__icon {
			font-size: var(--font-size-3xl);
			margin-bottom: var(--space-2);
		}

		.feature-card__title {
			font-size: var(--font-size-lg);
			font-weight: var(--font-weight-semibold);
			margin-bottom: var(--space-2);
			color: var(--color-text-primary);
		}

		.feature-card__text {
			font-size: var(--font-size-sm);
			color: var(--color-text-secondary);
			margin: 0;
			line-height: var(--line-height-relaxed);
		}

		/* æŠ€è¡“ã‚¹ã‚¿ãƒƒã‚¯ */
		.stack-list {
			list-style: none;
			padding: 0;
			margin: 0;
		}

		.stack-list li {
			display: flex;
			align-items: baseline;
			gap: var(--space-3);
			padding: var(--space-3) 0;
			border-bottom: 1px solid var(--color-gray-100);
		}

		.stack-list li:last-child {
			border-bottom: none;
		}

		.stack-name {
			font-weight: var(--font-weight-semibold);
			color: var(--color-primary-600);
			min-width: 160px;
		}

		.stack-desc {
			color: var(--color-text-secondary);
			font-size: var(--font-size-base);
		}

		/* ã¯ã˜ã‚æ–¹ã‚¹ãƒ†ãƒƒãƒ— */
		.start-steps {
			list-style: none;
			padding: 0;
			margin: 0;
			counter-reset: none;
		}

		.start-steps li {
			display: flex;
			align-items: center;
			gap: var(--space-4);
			padding: var(--space-4) 0;
		}

		.step-number {
			display: flex;
			align-items: center;
			justify-content: center;
			width: 32px;
			height: 32px;
			background: var(--color-primary-500);
			color: white;
			border-radius: 50%;
			font-weight: var(--font-weight-bold);
			font-size: var(--font-size-sm);
			flex-shrink: 0;
		}

		.step-text {
			font-size: var(--font-size-base);
		}

		.step-text code {
			background: var(--color-gray-100);
			padding: var(--space-1) var(--space-2);
			border-radius: var(--radius-sm);
			font-size: var(--font-size-sm);
		}

		/* ãƒ•ãƒƒã‚¿ãƒ¼ */
		.about-footer {
			margin-top: var(--space-12);
			padding-top: var(--space-6);
			border-top: 1px solid var(--color-gray-200);
			text-align: center;
			color: var(--color-text-secondary);
		}

		.footer-link {
			color: var(--color-primary-500);
			text-decoration: none;
			font-weight: var(--font-weight-medium);
		}

		.footer-link:hover {
			text-decoration: underline;
		}

		.footer-divider {
			margin: 0 var(--space-3);
			color: var(--color-gray-300);
		}

		/* ãƒ€ãƒ¼ã‚¯ãƒ¢ãƒ¼ãƒ‰å¯¾å¿œ */
		:global(html.dark) .name-card {
			background: linear-gradient(135deg, var(--color-gray-800), var(--color-gray-900));
			border-color: var(--color-gray-700);
		}

		:global(html.dark) .feature-card {
			background: var(--color-gray-800);
			border-color: var(--color-gray-700);
		}

		:global(html.dark) .stack-list li {
			border-bottom-color: var(--color-gray-700);
		}

		:global(html.dark) .step-text code {
			background: var(--color-gray-700);
		}

		:global(html.dark) .about-footer {
			border-top-color: var(--color-gray-700);
		}

		/* ãƒ¬ã‚¹ãƒãƒ³ã‚·ãƒ– */
		@media (max-width: 640px) {
			.feature-grid {
				grid-template-columns: 1fr;
			}

			.stack-list li {
				flex-direction: column;
				align-items: flex-start;
				gap: var(--space-1);
			}

			.stack-name {
				min-width: auto;
			}

			/* ã‚³ãƒ¼ãƒ‰è¦ç´ ã®æŠ˜ã‚Šè¿”ã—åˆ¶å¾¡ */
			.step-text code {
				word-break: break-all;
				overflow-wrap: break-word;
			}

			/* ã‚¹ãƒ†ãƒƒãƒ—ãƒ†ã‚­ã‚¹ãƒˆã®æœ€å¤§å¹…åˆ¶å¾¡ */
			.step-text {
				max-width: calc(100% - 32px - var(--space-4));
			}
		}
	</style>
</Layout>
