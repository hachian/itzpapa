# ========================================
# Image External Hosting Configuration
# ========================================
# Copy this file to .env and fill in your values
#
# This enables automatic image upload to S3/R2 during build
# Images will be served from the external URL instead of local files

# Enable/disable image hosting (true/false)
IMAGE_HOSTING_ENABLED=false

# Provider: S3 or R2
IMAGE_HOSTING_PROVIDER=R2

# Bucket name
IMAGE_HOSTING_BUCKET=itzpapa-images

# Base URL for serving images (your CDN/custom domain)
IMAGE_HOST_URL=https://images.itzpapa.hachian.com

# ========================================
# AWS S3 Configuration
# ========================================
# Required when IMAGE_HOSTING_PROVIDER=S3

# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_REGION=ap-northeast-1

# ========================================
# Cloudflare R2 Configuration
# ========================================
# Required when IMAGE_HOSTING_PROVIDER=R2

# R2 Access Key ID (from R2 API Token)
R2_ACCESS_KEY_ID=your-access-key-id

# R2 Secret Access Key (from R2 API Token)
R2_SECRET_ACCESS_KEY=your-secret-access-key

# R2 Account ID (from endpoint URL: https://<account_id>.r2.cloudflarestorage.com)
R2_ACCOUNT_ID=your-account-id
